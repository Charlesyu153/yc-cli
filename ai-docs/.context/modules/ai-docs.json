{
  "module": "ai-docs",
  "path": "ai-docs/",
  "description": "AI 文档管理系统 - 任务生命周期管理和上下文连续性",
  "purpose": "为 AI 辅助开发提供规范化的任务管理和文档系统",
  "features": [
    {
      "name": "任务文档管理",
      "description": "创建、更新、归档任务文档",
      "scripts": ["new-task.sh", "archive-task.sh"]
    },
    {
      "name": "上下文恢复",
      "description": "长期任务的上下文连续性保持",
      "scripts": ["export-context.sh"],
      "templates": ["context-resume-template.md"]
    },
    {
      "name": "AI 协作规范",
      "description": "统一的 AI 协作工作流程",
      "files": ["ai-guidelines.md"]
    },
    {
      "name": "Filesystem Context",
      "description": "持久化上下文管理系统",
      "path": ".context/",
      "scripts": ["discover-context.sh", "update-context.sh", "snapshot-context.sh"]
    }
  ],
  "directory_structure": {
    "current/": "进行中的任务",
    "archive/": "已完成任务归档",
    "templates/": "模板和工具脚本",
    ".context/": "持久化上下文系统"
  },
  "key_files": [
    {
      "file": "ai-docs/README.md",
      "purpose": "AI 文档系统概览"
    },
    {
      "file": "ai-docs/QUICKREF.md",
      "purpose": "快速参考指南"
    },
    {
      "file": "ai-docs/templates/ai-guidelines.md",
      "purpose": "AI 协作规范"
    },
    {
      "file": "ai-docs/templates/task-template.md",
      "purpose": "任务文档模板"
    },
    {
      "file": "ai-docs/templates/new-task.sh",
      "purpose": "创建新任务脚本"
    },
    {
      "file": "ai-docs/templates/archive-task.sh",
      "purpose": "归档任务脚本"
    },
    {
      "file": "ai-docs/templates/export-context.sh",
      "purpose": "导出上下文脚本"
    }
  ],
  "workflow": [
    "1. 使用 new-task.sh 创建新任务",
    "2. 在 current/{任务名}/ 目录中工作",
    "3. 每完成一步更新文档并 git commit",
    "4. 任务完成后使用 archive-task.sh 归档"
  ],
  "core_standards": [
    "禁止使用表情符号",
    "每完成一步就 commit",
    "任务完成后归档",
    "代码文件不超过 500 行"
  ],
  "deployment": {
    "target_path": "ai-docs/",
    "script": "scripts/deploy-ai-docs.sh"
  },
  "related_modules": ["agents"],
  "documentation": {
    "guide": "docs/AI-DOCS-GUIDE.md",
    "quickref": "ai-docs/QUICKREF.md"
  },
  "last_modified": "2026-01-14",
  "status": "stable"
}
